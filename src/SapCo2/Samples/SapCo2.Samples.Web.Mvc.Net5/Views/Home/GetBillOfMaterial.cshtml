                @Html.DisplayFor(modelItem => item.UpperTreeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTreeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialGroup)
            </td>
        </tr>
}
    </tbody>
</table>
