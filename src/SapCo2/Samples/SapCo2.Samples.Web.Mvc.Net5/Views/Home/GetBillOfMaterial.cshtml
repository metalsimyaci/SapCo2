                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubItemCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreeNodeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InternalCounter)
