                @Html.DisplayNameFor(model => model.StbData.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().SubItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().Unit)
