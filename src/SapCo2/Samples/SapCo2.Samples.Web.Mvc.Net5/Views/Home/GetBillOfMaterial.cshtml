            <th>
                @Html.DisplayNameFor(model => model.StbData.First().ComponentAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().TreeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().TreeNodeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().InternalCounter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().UpperTreeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().SubTreeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StbData.First().MaterialGroup)
