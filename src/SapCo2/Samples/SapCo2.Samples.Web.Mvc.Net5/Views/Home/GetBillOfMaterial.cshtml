<h1>GetBillOfMaterial</h1>


<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Topmat.Code)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Topmat.Code)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Topmat.Definition)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Topmat.Definition)
